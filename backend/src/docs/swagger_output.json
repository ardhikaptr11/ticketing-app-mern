  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          },
          "username": {
            "type": "string",
            "example": "johndoe123"
          },
          "password": {
            "type": "string",
            "example": "John123!"
          },
          "confirmPassword": {
            "type": "string",
            "example": "John123!"
          }
        },
        "xml": {
          "name": "RegisterRequest"
        }
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "identifier": {
            "type": "string",
            "example": "johndoe123"
          },
          "password": {
            "type": "string",
            "example": "John123!"
          }
        },
        "xml": {
          "name": "LoginRequest"
        }
      },
      "ActivationRequest": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "code sent to email"
          }
        },
        "xml": {
          "name": "ActivationRequest"
        }
      },
      "CreateCategoryRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Category name"
          },
          "description": {
            "type": "string",
            "example": "Category description"
          },
          "icons": {
            "type": "string",
            "example": "Icon URL or base64 string"
          }
        },
        "xml": {
          "name": "CreateCategoryRequest"
        }
      },
      "CreateEventRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "A name for your event"
          },
          "banner": {
            "type": "string",
            "example": "A banner for your event"
          },
          "category": {
            "type": "string",
            "example": "A category for your event (ObjectID)"
          },
          "description": {
            "type": "string",
            "example": "A description for your event"
          },
          "startDate": {
            "type": "string",
            "example": "yyyy-mm-dd hh:mm:ss"
          },
          "endDate": {
            "type": "string",
            "example": "yyyy-mm-dd hh:mm:ss"
          },
          "location": {
            "type": "object",
            "properties": {
              "region": {
                "type": "string",
                "example": "Your desired region id"
              },
              "coordinates": {
                "type": "array",
                "example": [
                  0,
                  0
                ],
                "items": {
                  "type": "number"
                }
              }
            }
          },
          "isOnline": {
            "type": "boolean",
            "example": false
          },
          "isFeatured": {
            "type": "boolean",
            "example": false
          }
        },
        "xml": {
          "name": "CreateEventRequest"
        }
      },
      "DeleteMediaRequest": {
        "type": "object",
        "properties": {
          "fileURL": {
            "type": "string",
            "example": "https://example.com/path/to/cloudinary/file.jpg"
          }
        },
        "xml": {
          "name": "DeleteMediaRequest"
        }
      }
    }
